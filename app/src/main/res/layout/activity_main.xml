<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="contentprovider.demo.com.demo_contentprovider.MainActivity">


    <EditText
        android:id="@+id/studentId"
        android:hint="Student ID"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        />

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/studentId"
        android:hint="Name"
        android:gravity="center_vertical"
        />
    <EditText
        android:id="@+id/grade"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Grade"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/name"
        />

    <Button
        android:id="@+id/insertDetails"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/grade"
        android:text="Add Student"
        android:onClick="addStudent"
        />

    <Button
        android:id="@+id/deleteStudent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Student"
        android:layout_below="@+id/insertDetails"
        android:onClick="deleteStudent"
        />

    <TextView
        android:id="@+id/showContactDetails"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contacts"
        android:layout_below="@+id/deleteStudent"
        android:ems="10"
        />
</RelativeLayout>
